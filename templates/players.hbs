<table border="1" class="sbn-data-table">
    <tbody>
    <tr>
        <td style="text-align: center;"><b>Player<br></b></td>
        <td style="text-align: center;"><b>AdjGS</b></td>
        <td style="text-align: center;"><b>GmSc/Min</b></td>
        <td style="text-align: center;"><b>Line</b></td>
    </tr>
    {{#each players}}
    <tr>
        <td>{{playerName}}</td>
        {{#if minutes}}
        <td align="right">{{formatNumber adjGS 1}}</td>
        <td align="right">{{formatNumber adjGSMin 2}}</td>
        <td>
            {{formatMinutes mIN}} Min,
            {{pTS}} Pts
            {{#if pTS}}
                ({{#if fGA}}{{fGM}}-{{fGA}} FG,{{/if}}
                {{#if fG3A}}{{fG3M}}-{{fG3A}} 3PT,{{/if}}
                {{#if fTA}}{{fTM}}-{{fTA}} FT,{{/if}})
            {{/if}}

            {{#if REB}}{{REB}} Reb ({{oREB}} Off){{/if}},
            {{#if aST}}{{aST}} Ast,{{/if}}
            {{#if bLK}}{{bLK}} Blk,{{/if}}
            {{#if sTL}}{{sTL}} Stl,{{/if}}
            {{#if tO}}{{tO}} TO,{{/if}}
            {{#if pF}}{{pF}} PF{{/if}}
        </td>
        {{else}}
        <td colspan="3">DNP</td>
        {{/if}}
    </tr>
    {{/each}}
    </tbody>
</table>


<table border="1" class="sbn-data-table">
    <tbody>
    <tr>
        <td style="text-align: center;"><b>Player</b></td>
        <td style="text-align: center;"><b>Usage%</b></td>
        <td style="text-align: center;"><b>Floor%</b></td>
        <td style="text-align: center;"><b>Plus Minus</b></td>
    </tr>
    {{#each players}}
        {{#if floorPercentage}}
            <tr>
                <td>{{playerName}}</td>
                <td align="right">{{#ifCond usgPct '>=' 0.3}}<strong>{{formatPercent usgPct}}</strong>{{else}}{{formatPercent usgPct}}{{/ifCond}}</td>
                <td align="right">{{#ifCond floorPercentage '>=' 0.667}}<strong>{{formatPercent floorPercentage}}</strong>{{else}}{{formatPercent floorPercentage}}{{/ifCond}}</td>
                <td align="right">{{#ifCond plusMinus '>=' 8}}<strong>{{formatNumber plusMinus}}</strong>{{else}}{{formatNumber plusMinus}}{{/ifCond}}</td>
            </tr>
        {{/if}}

    {{/each}}
    </tbody>
</table>